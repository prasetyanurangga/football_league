<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.view.DetailMatchActivity">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/tlb_match"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_arrow_back"
                        android:layout_width="30dp"
                        android:elevation="10dp"
                        android:id="@+id/btn_go_back"
                        android:layout_height="30dp"/>
                <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:elevation="10dp"
                        android:id="@+id/btn_favorite"
                        android:layout_height="30dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/colorPrimary">

            <androidx.cardview.widget.CardView
                    android:background="#fff"
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:id="@+id/event_name"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:id="@+id/event_time"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_height="wrap_content">
                        <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:padding="10dp"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:id="@+id/event_img_home"
                                    android:layout_centerHorizontal="true"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/event_home"
                                    android:layout_below="@id/event_img_home"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content"/>

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/event_home_skor"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:text="-"
                                    android:layout_toStartOf="@+id/titik_2"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:text=":"
                                    android:textSize="22dp"
                                    android:id="@+id/titik_2"
                                    android:layout_centerInParent="true"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:textSize="25dp"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:id="@+id/event_away_skor"
                                    android:layout_toEndOf="@+id/titik_2"
                                    android:layout_centerVertical="true"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:padding="10dp"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:id="@+id/event_img_away"
                                    android:layout_centerHorizontal="true"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/event_away"
                                    android:layout_below="@id/event_img_away"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:id="@+id/event_home_formation"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:text="Formation"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_away_formation"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:id="@+id/event_home_shot"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:text="Shots"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_away_shot"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:id="@+id/event_home_goal"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:text="Goal Detail"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_away_goal"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:id="@+id/event_home_red"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Red Cards"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_away_red"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:id="@+id/event_home_yellow"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Yellow Card"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                <TextView

                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_away_yellow"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>